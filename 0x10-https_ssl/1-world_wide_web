#!/usr/bin/env bash
# Information about subdomainains

domain=$1

if [ $# -eq 1 ]; then subdomain=("www" "lb-01" "web-01" "web-02"); else subdomain=("$2"); fi

for sub in "${subdomain[@]}";
do
	dig "$sub.$domain" | awk -v domi="$sub" '/ANSWER SECTION:/ {getline; print "The subdomain", domi, "is a", $4, "record and points to", $5}'
done
